@{
    var path = Context.Request.Path.ToString();
}

<!-- HEADER DESKTOP-->
<header class="header-desktop2">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="header-wrap2">
                <div class="logo d-block d-lg-none">
                    <a href="#">
                        <img src="~/images/icon/logo2.png" alt="Logo" />
                    </a>
                </div>
                <div class="header-button2">
                    <div class="header-button-item js-item-menu">
                        <i class="zmdi zmdi-search"></i>
                        <div class="search-dropdown js-dropdown">
                            <form action="">
                                <input class="au-input au-input--full au-input--h65" type="text" placeholder="Search ..." />
                                <span class="search-dropdown__icon">
                                    <i class="zmdi zmdi-search"></i>
                                </span>
                            </form>
                        </div>
                    </div>
                    <div class="header-button-item mr-0 js-sidebar-btn">
                        <i class="zmdi zmdi-menu"></i>
                    </div>
                    <div class="setting-menu js-right-sidebar d-none d-lg-block">
                        <div class="account-dropdown__body">
                            <div class="account-dropdown__item">
                                <a href="@Url.Action("Profile", "Home")">
                                    <i class="zmdi zmdi-account"></i>Account
                                </a>
                            </div>
                        </div>
                        <div class="account-dropdown__body">
                            <div class="account-dropdown__item">
                                <a href="#">
                                    <i class="zmdi zmdi-globe"></i>
                                    Language
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<aside class="menu-sidebar2 js-right-sidebar d-block d-lg-none">
    <div class="logo">
        <a href="/">
            <img src="~/images/icon/logo-white.png" alt="Cool Admin" />
        </a>
    </div>
    <div class="menu-sidebar2__content js-scrollbar2">
        <div class="account2">
            <div class="image img-cir img-120">
                <img src="~/images/default-user.jpg" alt="Users" />
            </div>
            <h4 class="name">Nom Utilisateur</h4>
            <a href="@Url.Action("Logout", "Home")">Sign out</a>
        </div>
        <nav class="navbar-sidebar2">
            <ul class="list-unstyled navbar__list">
                <li class="@(path == "/"? "active" : null)">
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fas fa-tachometer-alt"></i>Dashboard
                    </a>
                </li>
                <li class="@(path.Contains("TypeProduit")? "active" : null)">
                    <a href="@Url.Action("Index", "TypeProduit")">
                        <i class="fab fa-product-hunt"></i>Type de Produits
                    </a>
                </li>
                <li class="has-sub @(path.Contains("Activites")? "active" : null)">
                    <a class="js-arrow" href="#">
                        <i class="fa fa-retweet"></i>Activit√©s
                        <span class="arrow">
                            <i class="fas fa-angle-down"></i>
                        </span>
                    </a>
                    <ul class="list-unstyled navbar__sub-list js-sub-list">
                        <li class="@(path.Contains("Achats")? "active" : null)">
                            <a href="@Url.Action("Achats", "Activites")">                            
                                <i class="fa fa-level-up-alt"></i> Achats
                            </a>
                        </li>
                        <li class="@(path.Contains("Retraits")? "active" : null)">
                            <a href="@Url.Action("Retraits", "Activites")">
                                <i class="fa fa-level-down-alt"></i> Retraits
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="@(path.Contains("Stocks")? "active" : null)">
                    <a href="@Url.Action("Index", "Stocks")">
                        <i class="fa fa-briefcase"></i> Stocks
                    </a>
                </li>
                <li class="@(path.Contains("Users")? "active" : null)">
                    <a href="@Url.Action("Index", "Users")">
                        <i class="fa fa-users"></i>Utilisateurs
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>
<!-- END HEADER DESKTOP-->