@section css {
    <link href="~/lib/select2/select2.min.css" rel="stylesheet" media="all">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
}

@{
    ViewData["Title"] = "Achats";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="row">
            <div class="col-md-12">
                <!-- DATA TABLE -->
                <h3 class="title-5 m-b-35">data table</h3>
                <div class="table-data__tool">
                    <div class="table-data__tool-left">
                        <button class="au-btn-filter">
                            <i class="zmdi zmdi-filter-list"></i>Filters
                        </button>
                    </div>
                    <div class="table-data__tool-right">
                        <button class="au-btn au-btn-icon au-btn--green au-btn--small" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            <i class="zmdi zmdi-plus"></i>Ajouter Un Type de Produit
                        </button>
                        <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                            <select class="js-select2" name="type">
                                <option selected="selected">Export</option>
                                <option value="">Excel</option>
                                <option value="">Csv</option>
                            </select>
                            <div class="dropDownSelect2"></div>
                        </div>
                    </div>
                </div>

                <div class="collapse">
                    <div class="card card-body">
                        <div class="row">
                            <div class="col-md-5">
                                <input type="text" id="start-date" class="form-control" placeholder="Date Début">
                            </div>
                            <div class="col-md-5">
                                <input type="text" class="form-control" id="end-date" placeholder="Date Fin">
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-outline-primary btn-block" id="clear">Clear</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="table-responsive table-responsive-data2">
                    <table id="my-table" class="table table-data2 display">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Statut</th>
                                <th>Crée le</th>
                                <th>Crée par</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <!-- END DATA TABLE -->
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/select2/select2.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="~/js/datatable.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>
}