@model StockManagement.Services.Refit.Contracts.Responses.TypeProduit

@section css {    
}

@{
    ViewData["Title"] = "Details Type Produit";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-lg-12 col-xs-12 col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title p-1">
                                <h3 class="text-center title-2">Details d'un type de produit</h3>
                            </div>
                            <hr/>
                            <div class="mt-4">
                                <div class="row d-flex justify-content-center">
                                    <div class="col-md-4 col-sm-12 col-lg-4 col-xs-12">
                                        <div class="form-group">                                            
                                            @Html.LabelFor(m => m.Id, "Id", new { @class = "control-label mb-1" })
                                            <input asp-for="Id" readonly class="form-control valid" />
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12 col-lg-4 col-xs-12">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Label, "Label", new { @class = "control-label mb-1" })
                                            <input asp-for="Label" readonly class="form-control valid" />
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12 col-lg-4 col-xs-12">
                                        <div class="form-group">
                                            <label>
                                                @Html.Raw("Crée le")
                                            </label>                                            
                                            <input class="form-control" rows="4" asp-for="CreatedAt" readonly />
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12 col-lg-4 col-xs-12">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.UpdatedAt, Html.Raw("Dernière mise à jour le").ToString(), new { @class = "control-label mb-1" })
                                            <input class="form-control" rows="4" asp-for="UpdatedAt" readonly />
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-12 col-lg-4 col-xs-12">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.CreatedBy, Html.Raw("Crée par").ToString(), new { @class = "control-label mb-1" })
                                            <input class="form-control" rows="4" asp-for="CreatedBy" readonly />
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-sm-12 col-lg-4 col-xs-12">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.UpdatedBy, Html.Raw("Dernière mise à jour par").ToString(), new { @class = "control-label mb-1" })
                                            <input class="form-control" rows="4" asp-for="UpdatedBy" readonly />
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Description, "Description", new { @class = "control-label mb-1" })
                                            <textarea class="form-control" rows="4" asp-for="Description" readonly></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {    
}