@model StockManagement.Services.Refit.Contracts.Responses.TypeProduit

@section css {    
}

@{
    ViewData["Title"] = "Mettre à Jour Type Produit";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-lg-12 col-xs-12 col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title p-1">
                                <h3 class="text-center title-2">Mettre à jour un type de produit</h3>
                            </div>
                            <hr/>
                            <form asp-action="UpdateTypeProduit" method="POST" asp-controller="TypeProduit" class="mt-4">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="Label" class="control-label mb-1">
                                                Label
                                            </label>
                                            <input asp-for="Label" class="form-control valid" />
                                            <span asp-validation-for="Label" class="help-block text-danger"></span>
                                        </div>
                                    </div>                                                                                                                                             
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="Description" class="control-label mb-1">
                                                Description
                                            </label>
                                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                            <span asp-validation-for="Description" class="help-block text-danger"></span>
                                        </div>
                                    </div>                                                                      
                                </div>
                                <div class="row d-flex justify-content-center">
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-outline-primary btn-block">
                                            <i class="fa fa-plus"></i>&nbsp;
                                            <span>Enregistrer</span>                                        
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {    
    <partial name="_ValidationScriptsPartial"/>
}