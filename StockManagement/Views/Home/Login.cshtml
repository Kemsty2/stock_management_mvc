@model StockManagement.Dtos.LoginDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Gestion du stock et des activités">
    <meta name="author" content="Kemgne Moyo Steeve Aymard">
    <meta name="keywords" content="Gestion de stock, gestion activités">

    <!-- Bootstrap CSS-->
    <link href="~/lib/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="~/lib/animsition/animsition.min.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/css/theme.css" rel="stylesheet" media="all">
</head>

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/images/icon/logo-blue.png" alt="Logo Login">
                            </a>
                        </div>
                        <div class="login-form">
                            <form asp-action="Login" asp-controller="Home" method="POST">                                
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" class="au-input au-input--full" placeholder="Email">
                                    <span asp-validation-for="Email" class="help-block text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="au-input au-input--full" placeholder="Password">
                                    <span asp-validation-for="Password" class="help-block text-danger"></span>
                                </div>
                                <div class="login-checkbox">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe">Remember Me
                                    </label>                                    
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Connexion</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/lib/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/lib/bootstrap-4.1/popper.min.js"></script>
    <script src="~/lib/bootstrap-4.1/bootstrap.min.js"></script>

    <!-- Vendor JS       -->
    <script src="~/lib/animsition/animsition.min.js"></script>
    <script src="~/lib/perfect-scrollbar/perfect-scrollbar.js"></script>

    <!-- Main JS-->
    <script src="~/js/main.js"></script>
</body>
</html>